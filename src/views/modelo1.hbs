{{! Formulario que vai pegar os dados }}
<a href="/" id="botaoooo" class="btn btn-dark btn-mg">Voltar</a>
<form action="/criarmodelo1" method="post">
  <h1 class="display-3">Gerador Word</h1>
  <div class="form-group">
    <input
      type="text"
      name="numero"
      id="numero"
      class="numeral"
      value={{numero_doc}}
    />
    <label for="">Titulo</label>
    <input type="text" name="titulo" id="titulo" class="form-control" />
    <label for="">Lista</label>
    <input
      type="number"
      name="itemlista"
      id="itemlista"
      placeholder="coloque a quantidade de itens da lista"
      class="form-control"
    />
    <label for="">Descrição</label>
    <textarea name="desc" id="desc" cols="10" rows="5" class="form-control"></textarea>
    
    <label for="">Autor do documento</label>
    <input type="text" name="usuario" id="usuario" class="form-control"/>
    <label for="">Nome do arquivo</label>
     
    <input
      type="text"
      name="nomearquivo"
      id="nomearquivo"
      class="form-control"
    />
  </div>
  <input
    type="submit"
    id="button"
    class="btn btn-dark btn-lg"
    value="Gerar word"
  />
</form>