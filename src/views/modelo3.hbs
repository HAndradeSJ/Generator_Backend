{{!-- Formulario que vai pegar os dados --}}
<a href="/" id="botaoooo" class="btn btn-dark btn-mg">Voltar</a>
<form action="/criarmodelo3" method="post">
            <h1 class="display-3">Gerador Word</h1>
            <div class="form-group">
                <input
                type="text"
                name="numero"
                id="numero"
                class="numeral"
                value={{numero_doc}}
                />
                 <label for="">Titulo</label>
                 <input type="text" name="titulo" id="titulo" class="form-control">
                 <label for="">Tabela</label>
                 <input type="number" name="colunavertical" id="columnvertical" placeholder="insira a quantidade de colunas verticais">
                 <br>
                 <input type="number" name="colunahorizontal" id="columnhorizontal" placeholder="insira a quantidade de colunas horizontais">
                 <label for="">Texto</label>
                 <textarea name="texts" id="text2" cols="30" rows="5" class="form-control"></textarea > 
                 <label for="">Autor do documento</label>
                 <input type="text" name="usuario" id="usuario" class="form-control"/>
                 <label for="">Nome do arquivo</label>
                 <input type="text" name="nomearquivo" id="nomearquivo" class="form-control">
                
            </div>
            <input type="submit"id='button' class="btn btn-dark btn-lg" value="Gerar word">     
</form>

